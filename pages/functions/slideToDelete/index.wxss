page{
  padding: 20rpx 0;
}
page .list {
  padding-left: 20rpx;
  padding-right: 20rpx;
  overflow: auto;
}

.touch-item {
  display: flex;
  min-height: 212rpx;
  margin-bottom: 16rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: rgba(220, 220, 220, 0.6);
}

.touch-item .content {
  width: 100%;
  text-align: center;
  font-weight: bold;
  line-height: 212rpx;
  padding-left: 30rpx;
  padding-right: 10rpx;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(148rpx);
  transform: translateX(148rpx);
  margin-left: -148rpx;
}
.touch-item .del {
  width: 168rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: var(--yellow);
  color: #fff;
  -webkit-transform: translateX(168rpx);
  transform: translateX(168rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  font-size: 35rpx;
  border-top-right-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
}
.touch-move-active .content,
.touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

