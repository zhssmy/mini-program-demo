/* pages/layout/flex/index.wxss */
.page {
  padding: 20rpx;
}

.page .block {
  padding: 20rpx;
  margin-bottom: 20rpx;
  background: rgba(220, 220, 220, 0.6);
  border-radius: 16rpx;
}

.page .block .title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: bold;
  font-size: 30rpx;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #ccc;
}

.sub-title {
  width: auto;
  padding: 10rpx;
  margin: 10rpx 0;
  font-weight: bold;
  font-size: 26rpx;
  border-radius: 16rpx;
  background: rgba(250, 250, 250, 0.9);
}

.item {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  font-weight: bold;
  line-height: 100rpx;
  margin: 10rpx;
  border-radius: 16rpx;
  background: var(--yellow);
}

.layout-space-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.layout-space-around {
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.layout-space-evenly {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}

.flex-direction{
  display: flex;
  background: white;
  border-radius: 16rpx;
  margin: 20rpx 0;
  border: 4rpx var(--yellow) dashed;
}

.flex-direction-column {
  flex-direction: column;
}

.flex-direction-row {
  flex-direction: row;
}

.flex-wrap{
  display: flex;
  background: white;
  border-radius: 16rpx;
  margin: 20rpx 0;
  border: 4rpx var(--yellow) dashed;
}

.flex-wrap-nowrap {
  flex-wrap: nowrap;
}

.flex-wrap-wrap {
  flex-wrap: wrap;
}

.flex-wrap-wrap-reverse {
  flex-wrap: wrap-reverse;
}

.justify-content{
  display: flex;
  background: white;
  border-radius: 16rpx;
  margin: 20rpx 0;
  border: 4rpx var(--yellow) dashed;
} 

.justify-content-start {
  justify-content: flex-start;
}

.justify-content-end {
  justify-content: flex-end;
}

.justify-content-center {
  justify-content: center;
}

.justify-content-around {
  justify-content: space-around;
}

.justify-content-between {
  justify-content: space-between;
}

.justify-content-evenly {
  justify-content: space-evenly;
}

.align-items{
  display: flex;
  background: white;
  border-radius: 16rpx;
  margin: 20rpx 0;
  border: 4rpx var(--yellow) dashed;
}

.align-items-start {
  align-items: flex-start;
}

.align-items-end {
  align-items: flex-end;
}

.align-items-center {
  align-items: center;
}

.align-items-baseline {
  align-items: baseline;
}

.align-items-stretch {
  align-items: stretch;
}

.align-content{
  height: 450rpx;
