.hover{
  opacity: 0.6;
}

.collapse-panel{
  display: flex;
  height: 50rpx;
  transition: height 400ms ease-in-out;
  flex-direction: column;
  padding: 20rpx;
  border-radius: 16rpx;
  background-color: var(--weui-BG-2);
}

.collapse-panel .head{
  display: flex;
  justify-content: space-between;
  font-weight: bold;
}
.collapse-panel .head .title{
  height: 50rpx;
  width: 150rpx;
  background-color: var(--weui-BG-0);
  border-radius: 16rpx;
}
.collapse-panel .head .click{
  height: 50rpx;
  width: 50rpx;
  background: var(--yellow);
  border-radius: 16rpx;
}
.collapse-panel .des{
  margin-top: 20rpx;
  transition: height 400ms ease-in-out;
  border-radius: 16rpx;
  background-color: var(--weui-BG-0);
}

.hide{
  display: none;
}

